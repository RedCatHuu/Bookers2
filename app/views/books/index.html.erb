<body>
  <div class="container">
    <div class="row">
      
      <div class="col-md-3">
        <%= render 'users/user', user: @user %>
        <%= render 'book', book: @book %>
      </div>
      
      
      <div class="offset-md-1 col-md-8 bg-pink">
        <h2>Books</h2>
        
        <table class="table table-hover">
        
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>
          
          <tbody>
          <% @books.each do |b| %>
            <tr>
              <td><%= image_tag b.user.get_profile_image(100, 100) %></td>
              <td>
                <%= link_to(book_path(b.id)) do %>
                  <%= b.title %>
                <% end %>
              </td>
              <td><%= b.body %></td>
            </tr>
          <% end %>
          </tbody>
          
        </table>
      </div>
      
    </div>
  </div>
</body>