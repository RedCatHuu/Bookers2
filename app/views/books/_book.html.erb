<div class="container">
  <div class="row">
    <h2 class="w-100">New book</h2>
    <div class="form-body">
        <%= form_with model: book do |f| %>
          <p>Title</p>
          <%= f.text_field :title, class:"form-control" %>
          <p>Opinion</p>
          <%= f.text_area :body, class:"form-control" %>
          <br/>
          <%= f.submit 'Create Book', class: "btn btn-success" %>
        <% end %>
    </div>
  </div>
</div>