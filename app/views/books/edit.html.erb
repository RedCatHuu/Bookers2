<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-5">
      <% if @book.errors.any? %>
        <ul style="padding: 0;">
          <h2>
            <%= @book.errors.count %>error prohibited this obj from being saved:
          </h2>
          <% @book.errors.full_messages.each do |message| %>
            <li style="margin-left:20px;"><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      
      <h2>Editing Book</h2>
      <%= form_with model: @book do |f| %>
        <div class="form-group">
          <%= f.label :Title, for:"inputTitle" %>
          <%= f.text_field :title, class:"form-control", id:"inputTitle" %>
        </div>
        <div class="form-group">
          <%= f.label :Body, for:"inputBody" %>
          <%= f.text_area :body, class:"form-control", id:"inputBody" %>
        </div>
        <%= f.submit "Update Book", class: "btn btn-success" %>
      <% end %>
      <p style="margin-top: 10px;">
      <%= link_to "Show", book_path(@book.id) %>
      |
      <%= link_to "Back", books_path %>
      </p>
    </div>
  </div>
</div>