<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/user', user: @book_show.user %>
      <%= render 'book', book: @book %>
    </div>
    
    <div class="offset-md-1 col-md-8">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@book_show.user.id) do %>
                <%= image_tag @book_show.user.get_profile_image(100, 100) %>
                <br/>
                <%= @book_show.user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book_show.id) do %>
                <%= @book_show.title %></td>
              <% end %>
            <td><%= @book_show.body %></td>
            <% if @book_show.user == current_user %>
              <td>
                <%= link_to "Edit", edit_book_path(@book_show.id), class:"btn btn-success btn-sm" %>
              </td>
              <td>
                <%= link_to "Destroy", book_path(@book_show.id), method: :delete, data: {confirm: "本当に削除しますか？"}, class:"btn btn-danger btn-sm" %>
              </td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
      
  </div>
</div>
