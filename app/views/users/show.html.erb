<body>
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <%= render 'user', user: @user %>
        <%= render 'books/book', book: @book %>
      </div>
      <div class="offset-md-1 col-md-8">
        <h2>Books</h2>
        <table class="table table-hover">
          <thead>
            <tr>
              <td></td>
              <td><strong>Title</strong></td>
              <td><strong>Opinion</strong></td>
            </tr>
          </thead>
          
          <tbody>
            <% @book_index.each do |bi| %>
            <tr>
              <td>
                <%= link_to user_path(bi.user_id) do %>
                  <%= image_tag bi.user.get_profile_image(100, 100) %></td>
                <% end %>
              <td>
                <%= link_to book_path(bi.id) do %>
                  <%= bi.title %>
                <% end %>
                </td>
              <td><%= bi.body %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</body>