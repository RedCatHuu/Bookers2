<body>
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <%= render 'users/user', user: @user %>
        <%= render 'books/book', book: @book %>
      </div>
      
      <div class="offset-1 col-md-8">
        <h2>Users</h2>
        <table class="table">
          <thead>
            <tr>
              <td style="width: 30%"><strong>image</strong></td>
              <td><strong>name</strong></td>
              <td></td>
            </tr>
          </thead>
          
          <tbody>
            <% @users.each do |u| %>
            <tr>
              <td>
                <%= image_tag u.get_profile_image(100, 100) %>
              </td>
              <td><%= u.name %></td>
              <td>
                <%= link_to user_path(u.id) do %>
                Show
                <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</body>
