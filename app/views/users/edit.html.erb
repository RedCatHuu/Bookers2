<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-5">
      <h2>User info</h2>
      <%= form_with model: @user do |f| %>
        <div class="form-group">
          <%= f.label :name, for: "inputName" %>
          <%= f.text_field :name, class: "form-control", id: "inputName" %>
        </div>

        <div class="form-group">
          <%= f.label :image %>
          <%= f.file_field :image, accept: "image/*" %>
        </div>

        <div class="form-group">
          <%= f.label :introduction, for: "inputIntroduction" %>
          <%= f.text_area :introduction, class: "form-control", id: "inputIntroduction" %>
        </div>

        <%= f.submit "Update User", class: "btn btn-secondary " %>
      <% end %>
    </div>
  </div>
</div>
