<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-5">
      <h2>User info</h2>
      <% if @user.errors.any? %>
        <ul style="padding: 0;">
          <h2>
            <%= @user.errors.count %>error prohibited this obj from being saved:
          </h2>
          <% @user.errors.full_messages.each do |message| %>
            <li style="margin-left:20px;"><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      
      <%= form_with model: @user do |f| %>
        <div class="form-group">
          <%= f.label :name, for: "inputName" %>
          <%= f.text_field :name, class: "form-control", id: "inputName" %>
        </div>

        <div class="form-group">
          <%= f.label :image %><br/>
          <%= f.file_field :profile_image, accept: "image/*" %>
        </div>

        <div class="form-group">
          <%= f.label :introduction, for: "inputIntroduction" %>
          <%= f.text_area :introduction, class: "form-control", id: "inputIntroduction" %>
        </div>

        <%= f.submit "Update User", class: "btn btn-secondary " %>
      <% end %>
    </div>
  </div>
</div>
